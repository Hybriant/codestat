    "command-line",
    "analytics",
    "metrics",
    "programming",
    "languages",
    "syntax-highlighting",
    "caching",
    "performance",
    "visualization"
  ],
  "author": "CodeStat Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/codestat.git"
  },
  "homepage": "https://github.com/yourusername/codestat#readme",
  "bugs": {
    "url": "https://github.com/yourusername/codestat/issues"
  },
  "engines": {
