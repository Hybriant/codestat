    "cli-table3": "^0.6.3"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-node": "^11.1.0"
  },
  "preferGlobal": true,
  "files": [
    "bin/",
    "src/",
    "LICENSE",
    "README.md",
    "package.json"
