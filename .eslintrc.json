{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn",
    "security/detect-non-literal-fs-filename": "off",
    "security/detect-object-injection": "off",
    "no-process-exit": "off",
    "node/shebang": "off"
  },
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "env": {
        "node": true
      },
      "rules": {
        "no-console": "off",
        "no-unused-vars": "off"
      }
    }
  ]
}